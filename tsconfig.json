{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "outDir": "static/js",
    "sourceMap": true,
    "strict": true,
    "target": "es6",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "downlevelIteration": true
  },
  "typeRoots": [
    "node_modules/@types",
  ],
  "compileOnSave": true,
  "include": [
    "src/scripts"
  ],
}
